  },
  "homepage": "https://github.com/JPeer264/continuous-delivery-assignments#readme",
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-preset-env": "^1.2.0",
    "browser-sync": "^2.18.8",
    "nodemon": "^1.11.0",
    "watch-cli": "^0.2.1"
  },
  "dependencies": {
    "express": "^4.15.0"
